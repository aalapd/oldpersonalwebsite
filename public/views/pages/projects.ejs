<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
    </head>
    <body id="body">
        <header><%- include('../partials/header'); %></header>
        <div id="canvas-div"><%- include('../partials/canvas');%></div>
        <!--Template end-->
        <title>Projects by Aalap Davjekar</title>
        <div>
            <h1 class="project-title no-margin">Projects</h1>
        </div>
        <main id="projects-container" class="container scrollbar">
            <% projects.forEach(project => { %>
            <div
                class="container-item extra-padding no-margin magenta animation-expand"
                <% if (project.target === 'out') { %>
                onclick="window.open(`<%=project.href %>`)"
                <% } else { %>
                onclick="location.assign(`<%=project.href %>`)"
                <% } %>
            >
                <h2 class="text-glow" style="font-size: 4vh; color: yellow;"><%= project.name %></h2>
                <p><%= project.description %></p>
            </div>
            <% }); %>
        </main>
        <footer><%- include('../partials/footer'); %></footer>
    </body>
</html>
